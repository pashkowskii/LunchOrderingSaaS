- if @cart_facade.cart_items.any?
  .ui.compact.raised.segment{id: 'cart-container-position'}
    .ui.attached.message
      .header{id: 'cart-message'}
        .h2
          %i.shopping.cart.icon
          Your Shopping Cart
    .ui.form.attached.segment
      = form_for(@cart_facade.order, url: orders_path, method: 'post') do |f|
        %table.ui.very.basic.table
          %tbody
            - @cart_facade.cart_items.each do |item|
              %tr
                %td.left.aligned
                  %strong
                    %h4
                      = item.title
                %td.right.aligned{id: 'cart-item-price'}
                  %strong
                    %h4
                      = number_to_currency item.price
                %td.right.aligned{id: 'cart-delete-button'}
                  = link_to "âœ–", cart_path(item), method: "delete", class: "ui compact red button"
        .header{id: 'cart-message'}
          %h4
            %i.ui.truck.icon
            Enter Delivery Address
        %br
        .field
          = f.label :address, style: 'visibility: hidden;'
          = f.text_area :address, style: 'resize: none;'
        .ui.two.fields
          .twelve.wide.field{id: 'cart-total-field'}
            %h4 Total: #{number_to_currency @cart_facade.total_price}
          .eight.wide.field{style: "text-align:right;"}
            = f.submit "Confirm", class: "ui positive button"
- else
  = render 'empty_cart'
