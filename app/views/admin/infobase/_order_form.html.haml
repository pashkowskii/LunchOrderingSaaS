%table.ui.very.basic.table{id: 'order-table'}
  %thead
    %tr
      %th User Name
      %th User Email
      %th Delivery Address
      %th.center.aligned Order Items
      %th Date of Order
      %th.right.aligned Price of Order
      %th
  %tbody
  - orders.each do |order|
    %tr
      %td #{order.user_name}
      %td #{order.user_email}
      %td #{order.address}
      %td #{order.menu_titles}
      %td #{order.creation_date}
      %td.right.aligned #{number_to_currency order.total_price}
      %td
        .ui.compact.positive.button{"data-position": "top right", "data-tooltip": "Complete"}
          = link_to "âœ“", order_path(order), method: :delete
.ui.horizontal.divider
  Total: #{number_to_currency orders.amount_of_orders_per_day}