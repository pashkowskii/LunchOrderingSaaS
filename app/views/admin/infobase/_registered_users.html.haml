%table.ui.very.basic.table
  %thead
    %tr
      %th Name
      %th E-mail
      %th.right.aligned Date of Registration
  %tbody
    - infobase.users.each do |user|
      %tr
        %td{"data-label": "Name"}= user.name
        %td{"data-label": "E-mail"}= user.email
        %td.right.aligned{"data-label": "Date of Registration"}= user.created_at